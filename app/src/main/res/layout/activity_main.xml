<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="ViewModel"
            type="com.sand_corporation.www.roomwithrxjava.ViewModel.ViewModel"/>
        <variable
            name="Presenter"
            type="com.sand_corporation.www.roomwithrxjava.Presenter.Presenter"/>
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btnGetData"
            android:layout_alignParentTop="true"
            android:layout_marginTop="5dp"
            android:text="Get Data"
            android:onClick="@{(v) -> Presenter.getData()}"/>
        <ListView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:id="@+id/listView"
            android:layout_below="@+id/btnGetData">
        </ListView>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/edtLastName"
            android:id="@+id/edtFirstName"
            android:hint="Enter Your First Name"
            android:text="@={ViewModel.employeeObservableField.firstName}"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/btnSendData"
            android:id="@+id/edtLastName"
            android:hint="Enter Your Last Name"
            android:text="@={ViewModel.employeeObservableField.lastName}"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btnSendData"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="5dp"
            android:text="Send Data"
            android:onClick="@{(v)-> Presenter.sendData()}"/>

    </RelativeLayout>

</layout>